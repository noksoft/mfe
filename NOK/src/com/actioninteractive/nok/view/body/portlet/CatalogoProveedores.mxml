<?xml version="1.0" encoding="utf-8"?>
<!-- CATALOGO DE PROVEEDORES -->
<portlet:Portlet xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:portlet="com.actioninteractive.nok.view.body.portlet.*">
	<fx:Script>
		<![CDATA[
			import com.actioninteractive.nok.view.AssetManagerIn;
		]]>
	</fx:Script>
	<fx:Declarations>
		
		<s:RadioButtonGroup id="radiogroup1"/>
	</fx:Declarations>
	<portlet:children>
		
		<s:SkinnableContainer  width="100%" height="100%" skinClass="com.actioninteractive.nok.skins.PortletInHeaderSkin">
			<s:layout>
				<s:BasicLayout/>
			</s:layout>
			<!--  ENCABEZADO DEL PANEL   -->
			<s:Label text="Catálogo de proveedores" x="5" y="10"/>
			<s:TextInput y="6" right="50" width="200" alpha=".5" id="txtBusquedaArticulos" 
						 />
			<s:Button y="6" skinClass="com.actioninteractive.nok.skins.ButtonSearhSkin"  right="10" 
					  icon="{AssetManagerIn.iconZoom}"/>	
			
			<!--  CONTENEDOR GENERAL     -->
			<s:SkinnableContainer width="100%" height="100%" x="1" y="6">
				<s:layout>
					<s:HorizontalLayout paddingRight="20" />
				</s:layout>
				<s:Group width="100%" height="100%">
					<s:layout>
						<s:HorizontalLayout paddingTop="40"/>
					</s:layout>
					<!--Contenedor principal-->
					
					
					<s:Group width="100%" height="100%">
						<s:layout>
							<s:VerticalLayout/>
						</s:layout>
						
						
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="RFC" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Razón social" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Nombre comercial" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Teléfono" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Nombre de contacto" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Móvil" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="www" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="correo" textAlign="right" width="120" top="4"/>
							<s:TextInput width="100%"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Entidad" textAlign="right" width="120" top="4"/>
							<s:DropDownList width="100%"></s:DropDownList>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Municipio" textAlign="right" width="120" top="4"/>
							<s:DropDownList width="100%"></s:DropDownList>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label text="Localidad" textAlign="right" width="120" top="4"/>
							<s:DropDownList width="100%"></s:DropDownList>
						</s:HGroup>
						<s:HGroup width="100%" horizontalAlign="right">
							<s:Button label="Actualizar"/>
							<s:Button label="Borrar" />
							<s:Button label="Alta"/>
							<s:Button label="Cancelar"/>
						</s:HGroup>
					</s:Group>
					
				</s:Group>
			</s:SkinnableContainer>
			
			
		</s:SkinnableContainer>
		
	</portlet:children>
</portlet:Portlet>