<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:swiz="http://swiz.swizframework.org" 
	xmlns:view="com.actioninteractive.nok.view.*" 
	xmlns:bean="com.actioninteractive.nok.bean.*"
	>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<swiz:Swiz>
			<swiz:beanProviders>
				<bean:Beans />
			</swiz:beanProviders>
			
			<swiz:config>
				<swiz:SwizConfig
					eventPackages="com.actioninteractive.nok.event.*"
					viewPackages="com.actioninteractive.nok.view.*"
					/>
			</swiz:config>
		</swiz:Swiz>
	</fx:Declarations>
	<fx:Style source="style/style.css" />
	<fx:Style source="style/styleWhite.css"/>
	<s:Scroller 
		width="100%" height="100%"
		>
		<s:Group width="100%" height="100%">
			<view:Main 
				width="100%" height="100%" 
				minWidth="1024"
				/>
		</s:Group>
	</s:Scroller>
</s:Application>
